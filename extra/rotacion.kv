<Ventana>:

    BoxLayout:
        size: root.size
        orientation: 'vertical'
        Label:
            text: "Rotación e Imágenes como en ZIP"
            font_size: 32
            size_hint_y: .3
        Slider:
            min: 0
            max: 360
            id: slider

        Slider:
            min: 0.01666
            max: 2
            step: 0.0166
            id: velocidad
        Image:
            #text: "%s" % slider.value
            source: 'animacion.zip'
            anim_delay: velocidad.value
            canvas.before:
                PushMatrix
                Rotate:
                    angle: slider.value
                    origin: self.center
            #     Rectangle:
            #         size: self.size
            #         source: 'animacion.zip'
            #         anim_delay: 0.05
            canvas.after:
                PopMatrix
